@model Account

<div style="display: flex; justify-content: space-between;" class="jumbotron">
    <h1>Registration!</h1><br>
    <!-- <a href="/login"><button class="btn btn-info" style="margin-top: 50%;" >Login</button></a> -->
</div>

<div>
    <p><span asp-validation-for="FirstName"></span></p>
    <p><span asp-validation-for="LastName"></span></p>
    <p><span asp-validation-for="Email"></span></p>
    <p><span asp-validation-for="Password"></span></p>
    <p><span asp-validation-for="PwConfirmation"></span></p>
</div><br>

<form action="/register" method="POST">

    <div class="form-group row">
        <label for="FirstName" class="col-sm-2 col-form-label" style="font-size: 1.5em;">First Name: </label>
        <div class="col-sm-4">
            <input type="text" name="FirstName" placeholder="Enter your First Name!" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label for="LastName" class="col-sm-2 col-form-label" style="font-size: 1.5em;">Last Name: </label>
        <div class="col-sm-4">
            <input type="text" name="LastName" placeholder="Enter your Last Name!" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label for="Email" class="col-sm-2 col-form-label" style="font-size: 1.5em;" >Email: </label>
        <div class="col-sm-4">
            <input type="email" name="Email" placeholder="Enter a valid Email!"class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label for="Password" class="col-sm-2 col-form-label" style="font-size: 1.5em;">Password: </label>
        <div class="col-sm-4">
            <input type="password" name="Password" placeholder="Enter a Strong Password!"class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label for="PwConfirmation" class="col-sm-2 col-form-label" style="font-size: 1.5em;" >Password Confirmation: </label>
        <div class="col-sm-4">
            <input type="password" name="PwConfirmation" placeholder="The passwords must be the same!" class="form-control" />
        </div>
    </div>
    
    <a href="/login">Already Register??</a><br><br>
    <input type="submit" value="Register" class="btn btn-info" />
</form>